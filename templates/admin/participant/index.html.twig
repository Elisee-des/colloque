{% extends 'base.admin.html.twig' %}

{% block title %}Liste de tout les inscrits n'ayant pas de resumé(Participants){% endblock %}

{% block page %}
        <div class="pagetitle">
      <h1>Participants</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Liste</a></li>
          <li class="breadcrumb-item active"></li>
        </ol>
      </nav>
    </div>
{% endblock %}

{% block body %}
    <div class="card-body">
              <h2 class="card-title">Liste de tout les inscrits n'ayant pas de resumé(Participants)</h2>
              <!-- Bordered Table -->
              <table class="table table-bordered border-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Date</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for participant in participants %}
                  <tr>
                    <th scope="row">{{ participant.numero }}</th>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.dateCreation|date("m-d-Y") }}</td>
                    <td><a href="{{ path("admin_participant_detail", {"id": participant.id}) }}" title="Clique pour voir les details de cet inscript" class="btn btn-outline-primary btn-sm">Détails</a></td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              
    </div>

{% endblock %}
